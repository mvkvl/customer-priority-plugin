<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
        <param name="configure.url">/plugins/servlet/ws-slink-customer-priority/admin</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="customer-priority-plugin"/>
    
    <!-- add our web resources -->
    <web-resource key="customer-priority-plugin-resources" name="customer-priority-plugin web resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="customer-priority-plugin.css" location="/css/customer-priority-plugin.css"/>
        <resource type="download" name="customer-priority-plugin.js" location="/js/customer-priority-plugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>customer-priority-plugin</context>
    </web-resource>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~ admin ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <web-resource key="customer-priority-plugin-admin-resources" name="customer-priority-plugin admin web resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="customer-priority-admin.css" location="/css/customer-priority-admin.css"/>
        <resource type="download" name="customer-priority-admin.js" location="/js/customer-priority-admin.js"/>
        <context>atl.admin</context>
    </web-resource>
    <servlet key="admin-servlet" class="ws.slink.cp.servlet.AdminServlet">
        <resource type="i18n" name="i18n" location="customer-priority-plugin"/>
        <url-pattern>/ws-slink-customer-priority/admin</url-pattern>
    </servlet>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~ common ~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <rest key="rest" path="/ws-slink-customer-priority" version="2.0">
        <description>provides REST resources for the admin/config UI</description>
    </rest>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

</atlassian-plugin>